<?xml version="1.0" encoding="utf-8" ?>
<controls:AnimationPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             NavigationPage.HasNavigationBar="False"
             xmlns:controls="clr-namespace:FormsControls.Base;assembly=FormsControls.Base"
                        xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
                        xmlns:syncEffectsView="clr-namespace:Syncfusion.XForms.EffectsView;assembly=Syncfusion.Core.XForms"
                        xmlns:entry="clr-namespace:PURPLE.Controls"
                        BackgroundColor="{StaticResource whiteColor}"
                        xmlns:vm="clr-namespace:PURPLE.ViewModels"
                        xmlns:syncfusion="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms" 
                        xmlns:vm1="clr-namespace:PURPLE"
                        x:Class="PURPLE.Views.PostElement.FormulairePostPage">
    <controls:AnimationPage.PageAnimation>
        <controls:FlipPageAnimation Duration="Medium" Subtype="FromBottom" />
    </controls:AnimationPage.PageAnimation>
    <Grid x:Name="gd">
        <!--#region  FormulaireReussiteView-->
        <Grid Padding="10" BackgroundColor="{StaticResource whiteColor}" x:Name="ReactView">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            
            <!--#region TabBar-->
            <Grid  >
                <Label 
                    x:Name="closeBtn"
                    Text="&#xf00d;"
                       FontFamily="fal"
                       Padding="10"
                       TextColor="{StaticResource ThirdColor}"
                       FontSize="Title"
                       
                       HorizontalOptions="StartAndExpand"
                       VerticalOptions="CenterAndExpand">
                    
                </Label>
                <buttons:SfButton x:Name="ValidButtton" HorizontalOptions="EndAndExpand"  CornerRadius="15" WidthRequest="100" HeightRequest="30"  BackgroundColor="{StaticResource ThirdColor}" VerticalOptions="CenterAndExpand">
                    <Label Text="Terminer" FontFamily="MetroMedium" FontSize="Body" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" TextColor="{StaticResource whiteColor}"  />
                </buttons:SfButton>
            </Grid>
            
       
        <!--#endregion-->

        <ScrollView   Grid.Row="1" HorizontalScrollBarVisibility="Never" VerticalScrollBarVisibility="Never" Margin="-10" >
            <StackLayout  Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Label Text="Intitulé de la réussite"
                       FontSize="Large"
                       FontFamily="MetroBold"
                       TextColor="{StaticResource iconeColor}"
                       />
                <!--#region Zone de saisir de l'intitule-->
                <Frame Margin="0,0,0,15" BackgroundColor="{StaticResource backgroundColorPrimary}" Padding="0" CornerRadius="10" HasShadow="False">
                    <entry:CustomEntry  TextColor="{StaticResource iconeColor}"
                                        FontSize="Subtitle"
                                        FontFamily="MetroLight"/>
                </Frame>
                
                <!--#endregion-->

                <Label Text="Description de la réussite"
                       FontSize="Large"
                       FontFamily="MetroBold"
                       TextColor="{StaticResource iconeColor}"
                       />
                
                  <!--#region  Zone de saisir de dscription-->
                <Frame  Margin="0" BackgroundColor="{StaticResource backgroundColorPrimary}" Padding="0" CornerRadius="10" HasShadow="False">
                    <entry:ExtendedEditorControl IsExpandable="True" IsTextPredictionEnabled="True" x:Name="desciprion_entry" TextColor="{StaticResource iconeColor}" FontSize="Subtitle" FontFamily="MetroLight"/>
                </Frame>
                <!--#endregion-->

                <!--#region  Hashtags-->
                <buttons:SfButton Text="+hashtags" TextColor="{StaticResource iconeColor}"
                                  BackgroundColor="{StaticResource transparentColor}" 
                                  BorderWidth="1" BorderColor="{StaticResource ThirdColor}"
                                   Clicked="SfButton_Clicked"
                                  CornerRadius="20"
                                  Margin="0,0,200,0">
                </buttons:SfButton>


                <!--#region  FlexLayout Hastags-->
                    <syncfusion:SfListView  Margin="-10,0" x:Name="Collection_Hastag" HeightRequest="40" IsScrollBarVisible="False" ItemSpacing="0" ItemSize="100" Orientation="Horizontal"  ItemsSource="{Binding Listhastag}">
                        <syncfusion:SfListView.BindingContext>
                            <vm1:FormulaPostVewModel/>
                        </syncfusion:SfListView.BindingContext>
                        <syncfusion:SfListView.ItemTemplate >
                            <DataTemplate>
                                <syncEffectsView:SfEffectsView x:Name="hashtagBtn" MinimumWidthRequest="50" WidthRequest="40" Margin="5" CornerRadius="15" BackgroundColor="{StaticResource ThirdColor}">
                                    <Label TextColor="White" FontFamily="MetroRegular" HorizontalOptions="Center"  VerticalOptions="Center" Text="{Binding .}"/>
                                </syncEffectsView:SfEffectsView>
                            </DataTemplate>
                        </syncfusion:SfListView.ItemTemplate>
                    </syncfusion:SfListView>
                    <FlexLayout  BindableLayout.ItemsSource="{Binding Listhastag}"  Direction="Row" Wrap="Wrap" AlignItems="Start"  JustifyContent="Start">
                        <FlexLayout.BindingContext>
                            <vm1:FormulaPostVewModel/>
                        </FlexLayout.BindingContext>
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <syncEffectsView:SfEffectsView x:Name="BackButton" Margin="5" Padding="5" HorizontalOptions="StartAndExpand" BackgroundColor="{StaticResource backgroundColorPrimary}" TouchUpEffects="Ripple" RippleColor="{StaticResource btnColor}" CornerRadius="20"   VerticalOptions="CenterAndExpand">
                                <Label Text="{Binding .}" FontFamily="MetroRegular" FontSize="18" TextColor="{StaticResource iconeColor}" HorizontalOptions="Center" VerticalOptions="Center"/>
                            </syncEffectsView:SfEffectsView>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>
                <!--#endregion-->
                
                <Label Text="Lieu"
                       FontSize="Large"
                       FontFamily="MetroBold"
                       TextColor="{StaticResource iconeColor}"
                       />
                
                <!--#region Zone de Lieu-->
                <buttons:SfButton x:Name="LieuBtn" Text="" HeightRequest="36" Margin="0,0,0,15" BackgroundColor="{StaticResource backgroundColorPrimary}" Padding="0" CornerRadius="10" >
                    
                </buttons:SfButton>

                <!--#endregion-->

                <Label Text="Date"
                       FontSize="Large"
                       FontFamily="MetroBold"
                       TextColor="{StaticResource iconeColor}"
                       />
                
                <!--#region Zone de Date-->
                <buttons:SfButton x:Name="DateBtn" Text="" HeightRequest="36" Margin="0,0,0,15" BackgroundColor="{StaticResource backgroundColorPrimary}" Padding="0" CornerRadius="10" >

                </buttons:SfButton>

                <!--#endregion-->


                <Label Text="Compétences"
                       FontSize="Large"
                       FontFamily="MetroBold"
                       TextColor="{StaticResource iconeColor}"
                       />
                <!--#region Zone de Lieu-->
                <buttons:SfButton x:Name="CompetenceBtn" HeightRequest="36" Margin="0,0,0,15" BackgroundColor="{StaticResource backgroundColorPrimary}" Padding="0" CornerRadius="10" >
                    <StackLayout Orientation="Horizontal">
                        <Label Text="+"
                               Margin="5,0,0,0"
                               HorizontalOptions="Start"
                               VerticalTextAlignment="Center"
                               FontSize="Title"
                       FontFamily="MetroLight"
                       TextColor="{StaticResource iconeColor}"/>
                        <Label Text="Compétences"
                               Margin="5,0,0,0"
                               HorizontalOptions="Start"
                               VerticalTextAlignment="Center"
                               FontSize="Body"
                       FontFamily="MetroLight"
                       TextColor="{StaticResource iconeColor}"/>
                    </StackLayout>  
                </buttons:SfButton>

                <Label Text="Photo(s) ou video"
                       FontSize="Large"
                       FontFamily="MetroBold"
                       TextColor="{StaticResource iconeColor}"
                       />
                <!--#endregion-->
            </StackLayout>
        </ScrollView>   
            
            <!--#region BottomBar-->
            <Grid   Grid.Row="2" Margin="0,5,0,-5" BackgroundColor="{StaticResource whiteColor}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <!--Camera Bouton-->
                <syncEffectsView:SfEffectsView x:Name="CameraBtn" Grid.Column="0"  RippleColor="{StaticResource SecondColor}"  BackgroundColor="{StaticResource transparentColor}" CornerRadius="25">
                    <Label Text="&#xf030;"
                           FontFamily="fal" HorizontalOptions="Center" VerticalOptions="Center" FontSize="25" TextColor="Black" ></Label>
                </syncEffectsView:SfEffectsView>

                <!--Video Bouton-->
                <syncEffectsView:SfEffectsView x:Name="VideoBtn" Grid.Column="1"  RippleColor="{StaticResource SecondColor}"  BackgroundColor="{StaticResource transparentColor}" CornerRadius="25">
                    <Label Text="&#xf03d;"
                           FontFamily="fal" HorizontalOptions="Center" VerticalOptions="Center" FontSize="25" TextColor="Black" ></Label>
                </syncEffectsView:SfEffectsView>

                <!--Select Photo Bouton-->
                <syncEffectsView:SfEffectsView x:Name="SelectPhotoBtn" Grid.Column="2"  RippleColor="{StaticResource SecondColor}"  BackgroundColor="{StaticResource transparentColor}" CornerRadius="25">
                    <Label Text="&#xf302;"
                           FontFamily="fal" HorizontalOptions="Center" VerticalOptions="Center" FontSize="25" TextColor="Black" ></Label>
                </syncEffectsView:SfEffectsView>
            </Grid>
            <!--#endregion--> 
        </Grid>
        
       
        <!--#region FormulaireIdeeView-->
        <!--#endregion-->
        
        <!--#region  FormulaireQuestionView-->
        <!--#endregion-->
        
        <!--#region  FormulairePostView-->
        <!--#endregion-->
          
            
        <!--#region  ListdeHashtags-->
        <StackLayout Padding="0" Spacing="0" x:Name="stacklist">
            <StackLayout HeightRequest="1" BackgroundColor="{StaticResource grayDateColor}"></StackLayout>
            <syncfusion:SfListView  x:Name="listView"
                   ItemsSource="{Binding Listhastag}"
                                SelectionMode="None"
                                IsScrollBarVisible="False"
                                HeightRequest="300"
                                BackgroundColor="{StaticResource whiteColor}"
                   ItemSize="30">
            <syncfusion:SfListView.BindingContext>
                <vm1:FormulaPostVewModel/>
            </syncfusion:SfListView.BindingContext>
        <syncfusion:SfListView.ItemTemplate>
                <DataTemplate>
                        <StackLayout Padding="5">
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer  Command="{Binding Path=BindingContext.AddHashtagCommand, Source={x:Reference listView}}"
                                                      CommandParameter="{Binding .}" Tapped="TapGestureRecognizer_Tapped"/>
                            </StackLayout.GestureRecognizers>
                            <Label Text="{Binding .}" x:Name="hastgasitem" FontFamily="MetroRegular"  TextColor="{StaticResource iconeColor}" FontSize="Body" />
                            <StackLayout HeightRequest="1" Opacity=".6" BackgroundColor="{StaticResource grayDateColor}"></StackLayout>
                        </StackLayout>
                    </DataTemplate>
        </syncfusion:SfListView.ItemTemplate>
    </syncfusion:SfListView>
            <StackLayout HeightRequest="1" BackgroundColor="{StaticResource grayDateColor}"></StackLayout>
        </StackLayout>

        <!--#endregion-->
    </Grid>
</controls:AnimationPage>